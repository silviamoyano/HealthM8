<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextView_especialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="ESPECIALIDAD"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_fechaCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_toEndOf="@id/TextView_especialidad"
                android:text="FECHA"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_horaCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="130dp"
                android:layout_toEndOf="@id/TextView_fechaCita"
                android:text="HORA"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_lugarCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="170dp"
                android:layout_toEndOf="@id/TextView_horaCita"
                android:text="LUGAR"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_esOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:layout_toEndOf="@id/TextView_lugarCita"
                android:text="¿Es online?"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_esTelefonica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="250dp"
                android:layout_toEndOf="@id/TextView_esOnline"
                android:text="¿Es telefónica?"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView_medico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="290dp"
                android:layout_toEndOf="@id/TextView_esTelefonica"
                android:text="MEDICO"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_Recordatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="178dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="53dp"
                android:layout_marginBottom="50dp"
                android:text="@string/boton_recodatorioCita" />

            <Button
                android:id="@+id/button_Editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="57dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="240dp"
                android:layout_marginBottom="50dp"
                android:text="Editar" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>